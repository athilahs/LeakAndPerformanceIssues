<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.training.leakandperformanceissues.ui.PerformanceProblemActivity">

    <Button
        android:id="@+id/btn_execute_long_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Execute long operation"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_execute_another_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Execute another operation"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/textView_another_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Another operation concluded!"
        android:visibility="invisible"
        android:layout_marginTop="20dp"/>

</LinearLayout>
